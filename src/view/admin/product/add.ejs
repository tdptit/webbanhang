<!DOCTYPE html>
<html>

<head>
    <%- include("./head.ejs") %>
</head>

<body>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <a href="/product"><input type="button" tabindex="4" class="form-control btn btn-login"
                        value="Danh sách sản phẩm"></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <h1>Thêm sản phẩm</h1>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" action="/product/add" method="post" style="display: block;">
                                <div>
                                    <p style="color: greenyellow; font-size : 20px ">
                                        <%= mess %>
                                    </p>
                                    <p style="color: red; font-size : 20px ">
                                        <%= err %>
                                    </p>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="id" class="form-control" required placeholder="ID sản phẩm"
                                        value="">
                                </div>
                                <div style="font-size: 20px;">
                                    <label for>Loại sản phẩm :</label>
                                    <select name="category_id">
                                        <% for(let i=0 ; i< data.length ; i++) { %>
                                            <option value="<%= data[i].id %>">
                                                <%= data[i].name %>
                                            </option>
                                            <% } %>
                                    </select>
                                </div><br>
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control" required placeholder="Tên">
                                </div>
                                <div class="form-group">
                                    <label style="font-size: 20px;" for="">Hình ảnh</label>
                                    <input type="file" name="image" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="price" class="form-control" required
                                        placeholder="Giá tiền">
                                </div>
                                <div class="form-group">
                                    <label style="font-size: 20px;" for="">Chi tiết</label><br>
                                    <textarea required name="description" rows="6" cols="70"></textarea>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" tabindex="4" class="form-control btn btn-login"
                                                value="Thêm">
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
</body>

</html>